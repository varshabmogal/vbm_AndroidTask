<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rlHeader"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivDialogFeedbackClose"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="10dp"
            android:src="@drawable/baseline_close_24"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_toRightOf="@+id/ivDialogFeedbackClose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Feedback"
            android:textSize="18sp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            />
    </RelativeLayout>
    <LinearLayout
        android:padding="15dp"
        android:layout_below="@+id/rlHeader"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="8dp"
            android:text="Name"
            />
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etFeedbackName"
            android:background="@drawable/edit_back"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter the name"
            android:padding="6dp"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="8dp"
            android:text="Mobile Number"
            />
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etFeedbackMobile"
            android:background="@drawable/edit_back"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter mobile number"
            android:padding="6dp"
            android:maxLength="10"
            android:inputType="number"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="8dp"
            android:text="Description"
            />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etFeedbackDesc"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/edit_back"
            android:gravity="start"
            android:hint="Enter description"
            android:padding="6dp"
            android:textAlignment="textStart"
            android:textSize="14sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnFeedbackSubmit"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="@drawable/btn_shape"
            />




    </LinearLayout>
</RelativeLayout>