<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_weight="1"
                android:padding="10dp"
                android:layout_margin="6dp"
                android:backgroundTint="@color/light_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivCity"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_margin="6dp"
                    android:tint="@color/grey"
                    android:layout_centerVertical="true"
                    android:src="@drawable/baseline_location_on_24"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvRowCity"
                    android:layout_marginStart="3dp"
                    android:layout_toRightOf="@+id/ivCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textSize="16sp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginBottom="3dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="Niphad"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvRowCityCountry"
                    android:layout_below="@+id/tvRowCity"
                    android:layout_toRightOf="@+id/ivCity"
                    android:layout_width="wrap_content"
                    android:layout_marginEnd="50dp"
                    android:layout_height="wrap_content"
                    android:text="Near about godavri"

                    android:layout_marginStart="3dp"
                    android:textSize="14sp"
                    android:textColor="@color/text_color"
                    />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivRowCountryIMG"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="4dp"
                    android:tint="@color/grey"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/baseline_location_on_24"
                    />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>