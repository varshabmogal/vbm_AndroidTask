<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:cardCornerRadius="8dp"
        android:backgroundTint="@color/color_accent"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivHotel"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_flight"
                    android:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_toRightOf="@+id/ivHotel"
                    android:text="Flights"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">


                        <LinearLayout

                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                         <RelativeLayout
                             android:layout_marginTop="10dp"
                             android:paddingHorizontal="10dp"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content">
                             <ImageView
                                 android:id="@+id/airline_logo"
                                 android:layout_width="32dp"
                                 android:layout_height="32dp"
                                 android:src="@drawable/ic_flight"
                                 app:layout_constraintStart_toStartOf="parent"
                                 app:layout_constraintTop_toTopOf="parent" />

                             <TextView
                                 android:layout_toRightOf="@+id/airline_logo"
                                 android:id="@+id/tvFlightName"
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:text="American Airlines"
                                 android:textStyle="bold"
                                 android:textSize="16sp"
                                 android:textColor="@color/black"
                                 android:paddingStart="8dp"/>

                             <TextView
                                 android:layout_toRightOf="@+id/airline_logo"
                                 android:layout_below="@+id/tvFlightName"
                                 android:id="@+id/tvRowFNumber"
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:text="AA-829"
                                 android:layout_margin="4dp"
                                 android:textSize="13sp"
                                 />
                         </RelativeLayout>

                           <LinearLayout
                               android:layout_weight="3"
                               android:layout_marginTop="3dp"
                               android:paddingHorizontal="10dp"
                               android:orientation="horizontal"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content">

                               <RelativeLayout
                                   android:layout_weight="1"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content">
                                   <TextView
                                       android:id="@+id/tvRowFStartTime"
                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       android:text="08:35"
                                       android:textAlignment="center"
                                       android:textSize="14sp"
                                       android:textStyle="bold"
                                      />
                                   <TextView
                                       android:layout_below="@+id/tvRowFStartTime"
                                       android:id="@+id/tvRowFDate"
                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       android:text="1h 45m"
                                       android:textSize="13sp"
                                       android:layout_marginTop="5dp"
                                       android:textAlignment="center"
                                       android:textColor="@android:color/darker_gray"
                                       />


                               </RelativeLayout>
                               <RelativeLayout
                                   android:layout_weight="1"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content">

                                   <TextView
                                       android:id="@+id/tvRowFArrivalTime"
                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       android:text="09:55"
                                       android:textAlignment="center"
                                       android:textSize="14sp"
                                       android:textStyle="bold"
                                       />
                                   <View
                                       android:id="@+id/v1"
                                       android:layout_margin="2dp"
                                       android:layout_below="@+id/tvRowFArrivalTime"
                                       android:layout_width="match_parent"
                                       android:layout_height="2dp"
                                       android:background="@drawable/btn_shape"
                                       />
                                   <LinearLayout
                                       android:layout_below="@+id/v1"
                                       android:orientation="horizontal"
                                       android:layout_marginTop="3dp"
                                       android:gravity="center_horizontal"
                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content">
                                       <TextView
                                           android:id="@+id/tvRowFLocation1"
                                           android:layout_width="wrap_content"
                                           android:layout_height="wrap_content"
                                           android:text="LOS"
                                           android:textColor="@color/black"
                                           android:textSize="13sp"
                                           />
                                       <TextView
                                           android:layout_width="wrap_content"
                                           android:layout_height="wrap_content"
                                           android:text="Direct"
                                           android:layout_marginEnd="4dp"
                                           android:layout_marginStart="4dp"
                                           android:textSize="13sp"
                                           />
                                       <TextView
                                           android:id="@+id/tvRowFLocation2"
                                           android:layout_width="wrap_content"
                                           android:layout_height="wrap_content"
                                           android:text="SIN"
                                           android:textColor="@color/black"
                                           android:textSize="13sp"
                                           />
                                   </LinearLayout>

                               </RelativeLayout>
                               <RelativeLayout
                                   android:layout_weight="1"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content">
                                   <TextView
                                       android:id="@+id/tvRowFReachTime"
                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       android:text="08:35"
                                       android:textAlignment="center"
                                       android:textSize="14sp"
                                       android:textStyle="bold"
                                       />
                                   <TextView
                                       android:layout_below="@+id/tvRowFReachTime"
                                       android:id="@+id/tvRowFReachDate"
                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       android:text="1h 45m"
                                       android:layout_marginTop="5dp"
                                       android:textAlignment="center"
                                       android:textSize="13sp"
                                       android:textColor="@android:color/darker_gray"
                                       />


                               </RelativeLayout>

                           </LinearLayout>


                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.7dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="4dp"
                                android:background="@color/grey" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:paddingHorizontal="8dp"
                                android:layout_marginBottom="4dp">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:paddingHorizontal="10dp"
                                    android:text="Flight Details"
                                    android:textColor="@color/color_accent"
                                    android:textSize="13sp"
                                    android:textStyle="bold"/>

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:paddingHorizontal="10dp"
                                    android:text="Price Details"
                                    android:textColor="@color/color_accent"
                                    android:textSize="13sp"
                                    android:textStyle="bold" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:paddingHorizontal="10dp"
                                    android:text="Edit Details"
                                    android:textColor="@color/color_accent"
                                    android:textSize="13sp"
                                    android:textStyle="bold"/>


                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.7dp"
                                android:paddingHorizontal="10dp"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="4dp"
                                android:background="@color/grey" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvRowActivityPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:paddingHorizontal="10dp"
                                android:text="Rs.123,450.00"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <RelativeLayout
                                android:id="@+id/remove_button"
                                android:layout_width="match_parent"
                                android:layout_height="55dp"
                                android:layout_marginTop="15dp"
                                android:background="@color/light_red">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:drawableEnd="@drawable/baseline_close_24"
                                    android:drawableTint="@color/red"
                                    android:text="Remove "
                                    android:textColor="@color/red"
                                    android:textSize="18dp"
                                    android:textStyle="bold" />


                            </RelativeLayout>

                        </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>